<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.SettingsActivity"
    android:background="@drawable/acceuil">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Paramètres"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/menu_btn"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/consigne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Son du click sur la consigne" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/element"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Son sur les éléments" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fond des jeux" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/show_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Affichage de la couleur au clique (Normal)" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>