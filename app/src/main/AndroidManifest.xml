<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.gamaticow.auxcouleursdelocean">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AuxCouleursDeLOcean">
        <!-- Common -->
        <activity
            android:name=".MainActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controller.EndGameActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".controller.LevelActivity"
            android:screenOrientation="landscape" />
        <activity android:name=".controller.CreditActivity"
            android:screenOrientation="landscape"/>
        <activity android:name=".controller.SettingsActivity"
            android:screenOrientation="landscape"/>
        <!-- FishGame -->
        <activity
            android:name=".controller.fish.GameActivity"
            android:screenOrientation="landscape" />
        <!-- CrabGame -->
        <activity
            android:name=".controller.crab.GameActivity"
            android:screenOrientation="landscape" />
        <!-- BubbleGame -->
        <activity
            android:name=".controller.bubbles.GameActivity"
            android:screenOrientation="landscape" />
    </application>

</manifest>