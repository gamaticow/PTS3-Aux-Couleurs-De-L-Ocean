<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.gamaticow.auxcouleursdelocean">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AuxCouleursDeLOcean">
        <activity android:name=".MainActivity" android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- FishGame -->
        <activity android:name=".fish.controller.FishLevelActivity" android:screenOrientation="landscape" />
        <activity android:name=".fish.controller.GameActivity" android:screenOrientation="landscape" />
        <activity android:name=".fish.controller.EndGameActivity" android:screenOrientation="landscape" />
        <!-- CrabGame -->
        <activity android:name=".crab.MainActivity2" android:screenOrientation="landscape" />
        <activity android:name=".crab.Game" android:screenOrientation="landscape" />
        <activity android:name=".crab.GameMedium" android:screenOrientation="landscape" />
        <activity android:name=".crab.GameHard" android:screenOrientation="landscape" />
        <!-- BubbleGame -->
        <activity android:name=".bubble.controleur.MenuActivity" android:screenOrientation="landscape" />
        <activity android:name=".bubble.controleur.MainActivity" android:screenOrientation="landscape" />
    </application>

</manifest>